<?xml version="1.0"?>
<ruleset name="Wicket Guest Payment Standards">
	<description>Wicket Guest Checkout PSR-12 Coding Standards</description>

	<!-- Get the PSR-12 Coding Standards -->
	<rule ref="PSR12" />

	<!-- Exclude common files and directories -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/dist/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>*/coverage/*</exclude-pattern>
	<exclude-pattern>*/reference-classes/*</exclude-pattern>

	<arg name="extensions" value="php" />
	<arg value="s" />
	<arg name="report" value="full" />
	<arg name="report-width" value="120" />

	<file>src/</file>
	<file>tests/</file>
</ruleset>
